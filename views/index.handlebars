<img src="../assets/img/burger.jpg" alt="Burger pic">
<h1 class="header">Eat-Da-Burger!</h1>

{{!-- <h2 class="burgers">Burgers List!</h2> --}}

<ul class="burgers-list">
    <br>
    {{#each burgers}}
    <p>{{this.id}}</p>
    <p>{{this.burger_name}}</p>
    {{#unless devoured}}
    {{> burgers/burger devoured=true}}
    {{/unless}}
    {{!-- <button data-id="{{this.id}}" class="devBtn">Devour!!</button> --}}
    {{/each}}
</ul>

<h2 class="devoured">Devoured Burgers!</h2>

<ul class"devoured">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger devoured=false}}
    {{/if}}
    {{/each}}
</ul>
